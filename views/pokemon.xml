<odoo>
  <data>
    <record id="inherit_res_partner_form" model="ir.ui.view">
      <field name="name">inherit_res_partner_form</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='name']" position="after">
          <button name="get_pokemon" string="Get Pokemon" type="object" class="oe_highlight" widget="boolean_button" options="{'terminology': 'is_company'}"/>
          <group>
            <field name="pokemon_name" readonly="1" widget="boolean_button" options="{'terminology': 'is_company'}"/>
          </group>
        </xpath>
      </field>
    </record>

    <record id="inherit_res_partner_kanban" model="ir.ui.view">
      <field name="name">inherit_res_partner_kanban</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.res_partner_kanban_view"/>
      <field name="arch" type="xml">
          <xpath expr="//div[@class='oe_kanban_details d-flex flex-column justify-content-between']" position="inside">
              <div class="mt-auto">
                  <div>PokÃ©mon: <field name="pokemon_name"/></div>
              </div>
          </xpath>
      </field>
    </record>
  </data>
</odoo>